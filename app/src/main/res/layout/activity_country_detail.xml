<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.CountryDetail">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:id="@+id/country_name_detail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country Name"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/country_cases_detail"
            android:layout_marginTop="60dp"
            android:textSize="25sp"
            android:padding="5dp"
            android:text="Country Cases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_today_cases_detail"
            android:layout_marginTop="110dp"
            android:text="Today Cases"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_death_detail"
            android:layout_marginTop="160dp"
            android:text="Country Death"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_today_death_detail"
            android:layout_marginTop="210dp"
            android:text="Today Death"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_recovered_detail"
            android:layout_marginTop="260dp"
            android:text="Country Recovered"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_today_recovered_detail"
            android:layout_marginTop="310dp"
            android:text="Today Recovered"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_active_detail"
            android:layout_marginTop="360dp"
            android:text="Country Active"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>