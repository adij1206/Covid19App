<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.StateDetail">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:id="@+id/state_name_detail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State Name"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/state_active_detail"
                android:layout_marginTop="60dp"
                android:textSize="25sp"
                android:padding="5dp"
                android:text="State Active Cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/state_death_detail"
                android:layout_marginTop="110dp"
                android:text="State Death"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/state_recovered_detail"
                android:layout_marginTop="160dp"
                android:text="State Recovered"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/state_total_detail"
                android:layout_marginTop="210dp"
                android:text="State Total Cases"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

</LinearLayout>
