<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.HomeActivity">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093"
        tools:layout_editor_absoluteX="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/homeCardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_bg"
            app:cardBackgroundColor="@color/bg"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:id="@+id/global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="30sp"
                android:gravity="center"
                android:text="Total Cases Globally" />

            <TextView
                android:id="@+id/total_cases"
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="30dp"
                android:textSize="25sp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="15dp" />
        </androidx.cardview.widget.CardView>

        <TableRow
            android:id="@+id/tablerow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/track_country"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:text="Track Countries"
                android:layout_marginStart="50dp"
                android:background="@drawable/button_bg"/>
            <Button
                android:id="@+id/track_indian_states"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:text="Track Indian States"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="50dp"/>
        </TableRow>
        <androidx.cardview.widget.CardView
            android:id="@+id/prevention_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/prevention_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preventions"
                android:background="@drawable/cardview_bg"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="30sp"/>
            <ImageView
                android:id="@+id/handwash"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="75dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/handwash"
                />
            <ImageView
                android:id="@+id/group"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="75dp"
                android:layout_marginStart="130dp"
                android:src="@drawable/group"
                />
            <ImageView
                android:id="@+id/mask"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="75dp"
                android:layout_marginStart="270dp"
                android:src="@drawable/mask"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/symptoms_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/symptoms_text"
                android:background="@drawable/cardview_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="30sp"/>
            <ImageView
                android:id="@+id/cough"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="75dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/cough"
                />
            <ImageView
                android:id="@+id/fever"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="75dp"
                android:layout_marginStart="135dp"
                android:src="@drawable/fever"
                />
            <ImageView
                android:id="@+id/head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="75dp"
                android:layout_marginStart="270dp"
                android:src="@drawable/headache"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>